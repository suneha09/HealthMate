<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Image for Calories Burned -->
        <ImageView
            android:id="@+id/image_calories"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/calories_icon"
            android:contentDescription="Calories Burned"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text="Calories Burned Calculator"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp" />

        <EditText
            android:id="@+id/edit_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter weight (kg)"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter exercise duration (minutes)"
            android:inputType="number"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_met"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter MET value (e.g., 8.0)"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_calculate"
            android:text="Calculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/text_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:textColor="#000000" />
    </LinearLayout>
</ScrollView>



