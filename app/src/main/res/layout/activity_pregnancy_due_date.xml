<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <!-- New Image Added Here -->
    <ImageView
        android:id="@+id/image_pregnancy"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:src="@drawable/pregnancy"
        android:contentDescription="Pregnancy"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="ðŸ¤°Pregnancy Due Date Calculator"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/button_pick_date"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Pick LMP Date" />

    <Button
        android:id="@+id/button_calculate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Calculate Due Date"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/text_result"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text=""
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="24dp" />

</LinearLayout>
